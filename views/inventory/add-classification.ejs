<%- messages() %>

<div id="classification-form">
  <h1><%- title %></h1>
  <form class="form-container" action="/inv/add-classification" method="post">
    <p class="required-text">FIELD IS REQUIRED</p>
    <p class="required-text">The new classification name cannot contain a space or special character of any kind</p>
    <fieldset>
      <label class="form-label" for="classification">Classifiation Name:
        <input type="text" id="classification" name="classification_name" required pattern="^[a-zA-Z]{1,9}$" value="<%= locals.classification_name %>">
      </label>
    </fieldset>
    <button class="login-button" type="submit">Add Classifiation</button>
  </form>
</div>